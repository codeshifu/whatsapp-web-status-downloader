{
  "manifest_version": 2,
  "version": 1,
  "name": "WhatsApp Status Downloader",
  "description": "One-click WhatsApp web status downloader",
  "icons": {
    "16": "icons/icon@16.png",
    "48": "icons/icon@48.png",
    "128": "icons/icon@128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
